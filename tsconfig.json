{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@project/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "build",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
